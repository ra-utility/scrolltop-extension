{
    "name": "scrolltop-extension",
    "version": "1.0",
    "description": "一键置顶浏览器插件",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "一键置顶",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ]
}